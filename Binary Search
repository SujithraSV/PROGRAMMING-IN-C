// BINARY SEARCH
/*
get elements
sort
traverse
mid
check 
out
*/
#include <stdio.h>
int sort(int arr[],int n);
int binary_search(int arr[],int n);
int main()
{
    int n,result;
    //read
    printf("enter the total:");
    scanf("%d",&n);
    int arr[n];
    printf("enter the elements:\n");
    for(int i=0;i<n;i++)
    {
    scanf("%d",&arr[i]);
    }
    //sort
    arr[n]=sort(arr,n);
    //print
    printf("the sorted elements:\n");
    for(int i=0;i<n;i++)
    {
    printf("%d",arr[i]);
    }
    //find ele
    result=binary_search(arr,n);
    printf("the element was found in position %d",result);
    return 0;
}
int sort(int arr[],int n)
{
    int temp;
    for(int i=0;i<n;i++)
    {
        for(int j=i+1;j<n;j++)
        {
        if(arr[i]>arr[j])
        {
            temp=arr[i];
            arr[i]=arr[j];
            arr[j]=temp;
        }
        }
    }
    return arr[n];
}
int binary_search(int arr[],int n)
{
    int L=0,R=(n-1),mid,search;
    //search ele?
    printf("\nenter the search elemnt=");
    scanf("%d",&search);
    while(L<R)
    {
    mid=(R+L)/2;
    if(search==mid)
    {
        printf("\nelement found");
        return mid;
    }
    else if(search<mid)
    {
        R=mid-1;
        
    }
    else if(search>mid)
    {
        L=mid+1;
        
    }
    else 
    {
        printf("\nelement not found");
        return -1;
    }
    L++;
    }
}
